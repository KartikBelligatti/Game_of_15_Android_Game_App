<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/p2"
    tools:context=".GameActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_view_step"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#00735B9E"
            android:fontFamily="@font/bangers"
            android:gravity="center"
            android:text="Steps: 0"
            android:textColor="#F6F3F4"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/text_view_time"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#000CD7F1"
            android:fontFamily="@font/bangers"
            android:gravity="center"
            android:text="Time 00:00:00"
            android:textColor="#FBF6F8"
            android:textSize="24sp" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
        <!--        First row-->
        <Button
            android:id="@+id/btn1"
            style="@style/ButtonStyle"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:tag="00"
            android:text="1"

            android:textSize="18sp"
            android:textStyle="bold"
            app:backgroundTint="#E91E63" />

        <Button
            android:id="@+id/btn2"
            style="@style/ButtonStyle"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/btn1"
            android:tag="01"
            android:text="2"
            android:textSize="18sp"
            android:textStyle="bold"
            app:backgroundTint="#E91E63" />

        <Button
            android:id="@+id/btn3"
            style="@style/ButtonStyle"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/btn2"
            android:tag="02"
            android:text="3"
            android:textSize="18sp"
            android:textStyle="bold"
            app:backgroundTint="#E91E63" />

        <Button
            android:id="@+id/btn4"
            style="@style/ButtonStyle"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/btn3"
            android:tag="03"
            android:text="4"
            android:textSize="18sp"
            android:textStyle="bold"
            app:backgroundTint="#E91E63" />

        <!--        second row-->
        <Button
            android:id="@+id/btn5"
            style="@style/ButtonStyle"
            android:layout_below="@+id/btn1"
            android:layout_alignParentStart="true"
            android:tag="10"
            android:text="5"
            android:textSize="18sp"
            android:textStyle="bold"
            app:backgroundTint="#E91E63" />

        <Button
            android:id="@+id/btn6"
            style="@style/ButtonStyle"
            android:layout_below="@+id/btn1"
            android:layout_toEndOf="@+id/btn1"
            android:tag="11"
            android:text="6"
            android:textSize="18sp"
            android:textStyle="bold"
            app:backgroundTint="#E91E63" />

        <Button
            android:id="@+id/btn7"
            style="@style/ButtonStyle"
            android:layout_below="@+id/btn2"
            android:layout_toEndOf="@+id/btn2"
            android:tag="12"
            android:text="7"
            android:textSize="18sp"
            android:textStyle="bold"
            app:backgroundTint="#E91E63" />

        <Button
            android:id="@+id/btn8"
            style="@style/ButtonStyle"
            android:layout_below="@+id/btn2"
            android:layout_toEndOf="@+id/btn3"
            android:tag="13"
            android:text="8"
            android:textSize="18sp"
            android:textStyle="bold"
            app:backgroundTint="#E91E63" />

        <!--        third row-->
        <Button
            android:id="@+id/btn9"
            style="@style/ButtonStyle"
            android:layout_below="@+id/btn5"
            android:layout_alignParentStart="true"
            android:tag="20"
            android:text="9"
            android:textSize="18sp"
            android:textStyle="bold"
            app:backgroundTint="#E91E63" />

        <Button
            android:id="@+id/btn10"
            style="@style/ButtonStyle"
            android:layout_below="@+id/btn5"
            android:layout_toEndOf="@+id/btn5"
            android:tag="21"
            android:text="10"
            android:textSize="18sp"
            android:textStyle="bold"
            app:backgroundTint="#E91E63" />

        <Button
            android:id="@+id/btn11"
            style="@style/ButtonStyle"
            android:layout_below="@+id/btn5"
            android:layout_toEndOf="@+id/btn6"
            android:tag="22"
            android:text="11"
            android:textSize="18sp"
            android:textStyle="bold"
            app:backgroundTint="#E91E63" />

        <Button
            android:id="@+id/btn12"
            style="@style/ButtonStyle"
            android:layout_below="@+id/btn6"
            android:layout_toEndOf="@+id/btn11"
            android:tag="23"
            android:text="12"

            android:textSize="18sp"
            android:textStyle="bold"
            app:backgroundTint="#E91E63" />

        <!--        Forth row-->
        <Button
            android:id="@+id/btn13"
            style="@style/ButtonStyle"
            android:layout_below="@+id/btn9"
            android:layout_alignParentStart="true"
            android:tag="30"
            android:text="13"
            android:textSize="18sp"
            android:textStyle="bold"
            app:backgroundTint="#E91E63" />

        <Button
            android:id="@+id/btn14"
            style="@style/ButtonStyle"
            android:layout_below="@+id/btn10"
            android:layout_toEndOf="@+id/btn9"
            android:tag="31"
            android:text="14"
            android:textSize="18sp"
            android:textStyle="bold"
            app:backgroundTint="#E91E63" />

        <Button
            android:id="@+id/btn15"
            style="@style/ButtonStyle"
            android:layout_below="@+id/btn11"
            android:layout_toEndOf="@+id/btn10"
            android:tag="32"
            android:text="15"
            android:textSize="18sp"
            android:textStyle="bold"
            app:backgroundTint="#E91E63" />

        <Button
            android:id="@+id/btn16"
            style="@style/ButtonStyle"
            android:layout_below="@+id/btn12"
            android:layout_toEndOf="@+id/btn3"
            android:background="@color/colorFreeButton"
            android:tag="33"
            android:text=""
            android:textSize="18sp"
            android:textStyle="bold"
            app:backgroundTint="#E91E63" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:layout_gravity="bottom"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_shuffle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:background="@drawable/btn1"
            android:fontFamily="@font/bangers"
            android:text="Shuffle"
            android:textSize="18sp"
            app:backgroundTint="#E91E63" />

        <Button
            android:id="@+id/btn_stop"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:background="@drawable/btn1"
            android:fontFamily="@font/bangers"
            android:text="Stop"
            android:textSize="18sp"
            app:backgroundTint="#E91E63" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="302dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="250dp"
        android:background="#00EBECE1"
        android:fontFamily="@font/bangers"
        android:text="       GAME OF FIFTEEN"
        android:textColor="#F2EFF3"
        android:textSize="36sp"
        android:textStyle="bold" />

</FrameLayout>